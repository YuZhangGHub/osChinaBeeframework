<?xml version="1.0" encoding="utf-8" ?>

<template namespace="QuestionBoardTab_iPhone" version="1">
    
    <linear class="wrapper" orientation="h">
        <image id="bg"/>
        <button id="question"   class="item active">问答</button>
        <button id="sharing"   class="item">分享</button>
        <button id="synthesis" class="item">综合</button>
        <button id="career"   class="item">职业</button>
        <button id="site" class="item">站务</button>
    </linear>
    
    <style type="text/css">
        #bg {
        /*background-color: #F00;*/
        image-src: url(tab-bar.png) !important;
        image-mode: stretched;
        position: absolute;
        left: 0;
        top: 0;
        }
        
        .wrapper {
        width: 100%;
        height: 100%;
        float: center;
        }
        
        .item {
        width: 20.0%;
        height: 100%;
        color: #666;
        font-size: 13px;
        font-weight: lighter;
        }
        
        .active {
        color: #fff;
        background-image: url(tab-item.png);
        }
        
        @media(device:iOS7)
        {
        #bg {
        alpha: 0.7;
        }
        
        .item {
        color: #ccc;
        alpha: 0.7;
        }
        
        .active {
        color: #fff;
        alpha: 0.85;
        }
        }
        
    </style>
</template>